{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base Config",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "lib": ["ES2015", "dom"],
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "allowJs": false,
    "baseUrl": "./src"
  },
  "include": ["src"],
  "exclude": [
    "src/stories",
    "node_modules",
    "build",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
